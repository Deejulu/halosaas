# Copy this file to `.env` and fill in production/test values.
# Do NOT commit `.env` with real secrets.

# Django
SECRET_KEY=your_production_secret_key
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,localhost,127.0.0.1

# Database
# Leave DATABASE_URL blank to use local sqlite (development). For production,
# use a managed Postgres or other DB and set DATABASE_URL accordingly.
# Example: postgres://user:password@host:5432/dbname
DATABASE_URL=

# Email
EMAIL_HOST_USER=you@example.com
EMAIL_HOST_PASSWORD=supersecret
DEFAULT_FROM_EMAIL=Halo Sass <noreply@yourdomain.com>

# Paystack (replace with test keys during development)
PAYSTACK_PUBLIC_KEY=pk_test_xxx
PAYSTACK_SECRET_KEY=sk_test_xxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxx

# (Optional) S3 / DigitalOcean Spaces for media
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_ENDPOINT_URL=

